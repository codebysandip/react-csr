{
  "name": "react-ssr",
  "version": "1.0.0",
  "description": "",
  "main": "build/server.js",
  "type": "module",
  "scripts": {
    "start": "npm run verify && cross-env ENV=development DOTENV_CONFIG_PATH=./env/development.env ts-node -r dotenv/config scripts/build.ts --transpile-only",
    "start:with-local-server": "npm run verify && cross-env ENV=development DOTENV_CONFIG_PATH=./env/development.env LOCAL_API_SERVER=true ts-node -r dotenv/config scripts/build.ts --transpile-only",
    "start:cypress": "cross-env ENV=cypress DOTENV_CONFIG_PATH=./env/development.env ts-node -r dotenv/config scripts/build.ts --transpile-only & npm run cypress:open",
    "start:cypress:ci": "node build/server.mjs & npm run start:test-api",
    "build:cypress:client": "npx webpack --config ./config/webpack.dev.js --env IS_LOCAL=false --env ENV=cypress",
    "build:cypress:server": "npx webpack --config ./config/webpack.node.js --env IS_LOCAL=false --env ENV=cypress",
    "build:cypress": "npm run build:cypress:server && npm run build:cypress:client",
    "start:prod": "npm run verify && cross-env ENV=production DOTENV_CONFIG_PATH=./env/production.env ts-node -r dotenv/config scripts/build.ts --transpile-only",
    "start:test-api": "nodemon --watch test-ap1/* test-api/test-api.ts",
    "build:react:prod": "npx webpack --config ./config/webpack.prod.js --env IS_LOCAL=false --env ENV=production",
    "build:node:prod": "npx webpack --config ./config/webpack.node.js --env IS_LOCAL=false --env ENV=production",
    "build": "npm run build:node:prod && npm run build:react:prod",
    "build:stats": "npm run build:node:prod && cross-env STATS=true npm run build:react:prod",
    "build:prod:action": "cross-env GITHUB_ACTION=true npm run build",
    "pm2:prod": "pm2 start ecosystem.config.cjs --env production --only React-CSR",
    "test": "ts-node scripts/test-run.ts",
    "jest:test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "prepare": "husky install",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
    "verify": "ts-node ./scripts/verify.ts",
    "cypress:run": "npx cypress run --e2e && npx cypress run --component",
    "cypress:open": "npx cypress open -b chrome",
    "cypress:open:comp": "npm run cypress:open -- --component",
    "cypress:open:e2e": "npm run cypress:open -- --e2e",
    "copy:reports": "mkdir -p reports && cp coverage/cypress/coverage-final.json reports/from-cypress.json && cp coverage/jest/coverage-final.json reports/from-jest.json",
    "merge:reports": "nyc merge reports && mv coverage.json .nyc_output/out.json",
    "gen:reports": "nyc report --reporter=html --reporter=json --report-dir=reports",
    "combine:reports": "npm run copy:reports && npm run merge:reports && npm run gen:reports"
  },
  "author": "Sandip",
  "license": "ISC",
